
<%- include('../partials/header') %>


  <h2>Airline</h2>
  <h3><%= flight.airline %></h3>
  <h2>Airport</h2>
  <h3><%= flight.airport %></h3>
  <h2>Flight Number</h2>
  <h3><%= flight.flightNo %></h3>
  <h2>Departing at </h2>
  <h3><%= flight.departs %></h3>
  <h2>Arrival</h2>
  <h3><% flight.destinations.forEach(function(dest) { %>
    <tr>
      <td><%= dest.airport %></td>
      <td><%= dest.Arrival %></td>
    </tr>
  <!-- Close the forEach using EJS here -->
  <% }); %> %></h3>
  <form action="/flights/<%= flight.id %>" method="POST">
    <label for="airport"><br>
        <select name="airport">
            <option value="LAX">LAX</option>
            <option value="SAN">LIH</option>
            <option value="AUS">IAH</option>
            <option value="DEN">DEN</option>
        </select>
    </label><br>
    <label for="arrival"><br>  
        <input type="datetime-local" name="arrival">
    </label><br>
    <br>
    <button type="submit" id="">Save</button>  
</form>
<br>
<br>
<% if (flight.destinations.length) { %>
<table>
    <thead>
        <tr>
            <th>Airport</th>
            <th>Arrival</th>
        </tr>
    </thead>
<tbody>
    <% flight.destinations.forEach(function(f) { %>
    <tr>
        <td><%= f.airport %></td>
        <td><%= f.arrival %></td>
    </tr>
<% }) %>
</tbody>
</table>
<% } else {%>
<h5>No Destinations Yet</h5>
<%  } %>
<br>






<form action="/flights/<%= flight.id %>" method="POST">
  <label for="ticket"><br>
      <select name="Purchase a Ticket">
          <option value="/[A-F][1-9]\d?/">Seats Available</option>
          >
      </select>
  </label><br>
  <label for="flight"><br>  
      <input type="datetime-local" name="arrival">
  </label><br>
  <br>
  <button type="submit" id="">Save</button>  
</form>
<br>
<br>
<% if (ticket.length) { %>
<table>
  <thead>
      <tr>
          <th>seat</th>
          <th>flight</th>
      </tr>
  </thead>
<tbody>
  <% ticket.forEach(function(f) { %>
  <tr>
      <td><%= f.flight %></td>
      <td><%= f.seat %></td>
  </tr>
<% }) %>
</tbody>
</table>
<% } else {%>
<h5>No Tickets Yet</h5>
<%  } %>
