
<%- include('../partials/header') %>


  <h3><%= flight.flight %></h3>
  <h3>Complete: <%= flight.done ? 'Yes' : 'No' %></h3>
  
  <h2>Airline</h2>
  <h3><%= flight.airline %></h3>
  <h2>Airport</h2>
  <h3><%= flight.airport %></h3>
  <h2>Flight Number</h2>
  <h3><%= flight.flightNo %></h3>
  <h2>Departing at </h2>
  <h3><%= flight.departs %></h3>
  <h2>Flight Destination</h2>
  <h3><%= flight.destinations %></h3>
  <h2>Arrival</h2>
  <h3><% flight.destinations.forEach(function(dest) { %>
    <tr>
      <td><%= dest.airport %></td>
      <td><%= dest.Arrival %></td>
    </tr>
  <!-- Close the forEach using EJS here -->
  <% }); %> %></h3>
  <form action="/flights/<%= flight.id %>" method="POST">
    <label for="airport"><br>
        <select name="airport">
            <option value="LAX">LAX</option>
            <option value="LIH">LIH</option>
            <option value="IAH">IAH</option>
            <option value="DEN">DEN</option>
        </select>
    </label><br>
    <label for="arrival"><br>  
        <input type="datetime-local" name="arrival">
    </label><br>
    <br>
    <button type="submit" id="">Save</button>  
</form>
<br>
<br>
<% if (flight.destinations.length) { %>
<table>
    <thead>
        <tr>
            <th>Airport</th>
            <th>Arrival</th>
        </tr>
    </thead>
<tbody>
    <% flight.destinations.forEach(function(f) { %>
    <tr>
        <td><%= f.airport %></td>
        <td><%= f.arrival %></td>
    </tr>
<% }) %>
</tbody>
</table>
<% } else {%>
<h5>No Destinations Yet</h5>
<%  } %>
<br>
  


<%- include('../partials/footer') %>